{% extends 'base.html.twig' %}

{% block page_title reactApp.title %}

{% block open_graph_image 'https://storage.googleapis.com/en-marche-staging/images/cp_sharing.png' %}
{% block open_graph_image_width 2501 %}
{% block open_graph_image_height 1313 %}

{% block stylesheets %}
    <style>
        .react-app-loader {
            text-align: center;
            padding: 120px 0 200px 0;
        }
    </style>

    {% for css in manifest.css %}
        <link rel="stylesheet" type="text/css" href="{{ asset(css) }}" />
    {% endfor %}
{% endblock %}

{% block final_javascripts %}
    <script type="text/javascript">
        var config = {
            env: '{{ app.environment }}',
            staging: {{ enable_canary ? 'true' : 'false' }},
            em_api_host: '{{ em_api_host }}',
        };
    </script>

    {% for js in manifest.js %}
        <script type="text/javascript" src="{{ asset(js) }}"></script>
    {% endfor %}
{% endblock %}

{% block content %}
    <noscript>Vous devez activer Javascript pour voir cette page.</noscript>

    <div id="root">
        <div class="react-app-loader">
            <img src="{{ asset('images/loader-sm.gif') }}" />
            <br />
            Chargement ...
        </div>
    </div>
{% endblock %}
