<section class="l__wrapper--medium">
    {% block summary_trainings %}
        <div class="l__row l__row--h-stretch l__row--top l__tablet--col b__nudge--bottom-large">
            <h2>Formations</h2>
            {% for training in summary.trainings %}
                <div class="summary-training">
                    <h3>{{ training.diploma }} - {{ training.studyField }}</h3>
                    <h4>{{ training.organization|upper }}</h4>
                    <span>{{ training.startedAt|localizeddate('none', 'none', 'fr_FR', null, 'MMMM Y')|capitalize }} - {{ training.endedAt|localizeddate('none', 'none', 'fr_FR', null, 'MMMM Y')|capitalize }} ( todo )</span>
                    <br />
                    <p>{{ training.description }}</p>
                    <br />
                    <i>{{ training.extraCurricular }}</i>
                    {% block modify %}{% endblock %}
                </div>
            {% endfor %}
        </div>
    {% endblock %}
</section>
