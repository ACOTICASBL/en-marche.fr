<section id="summary-languages" class="l__wrapper--medium">
    {% block summary_languages %}
        <div class="l__row l__row--h-stretch l__row--top l__tablet--col b__nudge--bottom-large">
            <h2>Langues</h2>
            {% for language_id, language in summary.languagesByLevel %}
                <div class="summary-language">
                    <p>{{ language }}</p>
                    {% block modify %}{% endblock %}
                </div>
            {% endfor %}
        </div>
    {% endblock %}
</section>
