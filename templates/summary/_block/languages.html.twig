<section class="l__wrapper--medium">
    {% block summary_languages %}
        <div id="summary_languages" class="l__row l__row--h-stretch l__row--top l__tablet--col b__nudge--bottom-large">
            <h2>Langues</h2>
            {% for language in summary.languages %}
                <p>{{ language }}</p>
                {% block modify %}{% endblock %}
                {% if not loop.last %}<br>{% endif %}
            {% endfor %}
        </div>
    {% endblock %}
</section>
