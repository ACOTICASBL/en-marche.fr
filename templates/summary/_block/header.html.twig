<section class="l__wrapper--medium">
    {% block summary_left_part %}
        <div>
            <div>Photo</div>
            <h2 class="text--large b__nudge--bottom-tiny">{{ summary.member.fullname }}</h2>
            <div class="text--body text--gray">{{ summary.member.age }} ans, {{ summary.member.cityName }}</div>
        </div>
    {% endblock %}
    {% block summary_right_part %}{% endblock %}
    {% block summary_bottom_part %}
        <div>
            <div>
                {{ summary.member.activatedAt|localizeddate('none', 'none', 'fr_FR', null, 'MMMM Y') }}<br>
                Date d'adhésion
            </div>
            <div>
                {{ recent_activities.eventParticipationsCount }}
                <br>
                participation{{ recent_activities.eventParticipationsCount > 1 ? 's' }} à des events
            </div>
        </div>
    {% endblock %}
</section>
