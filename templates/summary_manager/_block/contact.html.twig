<section class="l__wrapper--medium">

    <div class="l__row l__row--h-stretch l__row--top l__tablet--col b__nudge--bottom-large">
        <h2>Comment vous contacter</h2>
        <a href="#" class="button">Modifier</a>
        <div>
            {% if summary.contactEmail %}
                <div class="summary-contact-email">
                    <i class="fa fa-envelope fa-5x"></i>
                </div>
            {% endif %}
            {% if summary.facebookUrl %}
                <div class="summary-contact-facebook">
                    <i class="fa fa-facebook fa-5x"></i>
                </div>
            {% endif %}
            {% if summary.linkedInUrl %}
                <div class="summary-contact-linked_in">
                    <i class="fa fa-linkedin fa-5x"></i>
                </div>
            {% endif %}
            {% if summary.twitterNickname %}
                <div class="summary-contact-twitter">
                    <i class="fa fa-twitter fa-5x"></i>
                </div>
            {% endif %}
        </div>
    </div>

</section>
