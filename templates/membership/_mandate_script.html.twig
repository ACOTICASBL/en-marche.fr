<script type="text/javascript">
    $(document).ready(function() {
        var formMandate = $('#form__mandate');
        var formElected = $('#{{ form.elected.vars.id }}');
        var selectMandate = $('#{{ form.mandate.vars.id }}');

        formElected.click(function() {
            const isChecked = $(this).is(':checked');

            formMandate.toggle(isChecked);
            selectMandate.attr('required', isChecked);

            if (!isChecked) {
                selectMandate.val("");
            }
        });
        formElected.triggerHandler('click');
    });
</script>
